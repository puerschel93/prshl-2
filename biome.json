{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"include": [
			"src/**/*.ts",
			"src/**/*.tsx",
			"src/**/*.js",
			"src/**/*.jsx",
			"src/**/*.mjs",
			"src/**/*.cjs",
			"src/**/*.css",
			"public/**/*.mdx"
		],
		"ignore": ["src/types/sanity.ts"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noArrayIndexKey": "off"
			},
			"complexity": {
				"noBannedTypes": "off",
				"useLiteralKeys": "off"
			}
		}
	}
}
